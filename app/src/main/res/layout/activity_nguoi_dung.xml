<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/wall1"
    tools:context=".NguoiDungActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm Người Dùng"
        android:textStyle="bold"
        android:textSize="24dp"/>
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/usermanage"
        android:layout_gravity="center"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="15"
        android:gravity="center"
        android:background="@drawable/edittext_style"
        android:hint="Tên tài khoản"
        android:textColor="#000"
        android:id="@+id/edtUserNameNguoiDung"
        android:src="@drawable/edittext_style"
        android:layout_marginTop="20dp"/>
    <EditText
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="15"
        android:gravity="center"
        android:background="@drawable/edittext_style"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:id="@+id/edtPassNguoiDung"
        android:layout_marginTop="20dp"/>
    <EditText
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="15"
        android:textColor="#000"
        android:background="@drawable/edittext_style"
        android:hint="Số điện thoại"
        android:id="@+id/edtPhoneNguoiDung"
        android:layout_marginTop="20dp"/>
    <EditText
        android:textColor="#000"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="15"
        android:background="@drawable/edittext_style"
        android:hint="Họ và Tên"
        android:id="@+id/edtFullNameNguoiDung"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddNguoiDung"
            android:onClick="addNguoiDung"
            android:background="@drawable/background_button"
            android:text="Thêm"/>
        <Button
            android:layout_width="150dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/background_button"
            android:layout_height="wrap_content"
            android:id="@+id/btnShowUser"
            android:onClick="ShowUsers"
            android:text="Hủy"/>
    </LinearLayout>

</LinearLayout>