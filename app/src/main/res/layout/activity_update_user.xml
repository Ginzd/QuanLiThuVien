<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/wall1"
    tools:context=".UpdateUserActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cập Nhật Thông Tin"
        android:textSize="24dp"
        android:textStyle="bold"/>
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/usermanage"
        android:layout_gravity="center"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="15"
        android:gravity="center"
        android:background="@drawable/edittext_style"
        android:hint="Tên tài khoản"
        android:textColor="#000"
        android:id="@+id/edtUserNameNguoiDung2"
        android:src="@drawable/edittext_style"
        android:layout_marginTop="20dp"/>
    <EditText
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="15"
        android:gravity="center"
        android:background="@drawable/edittext_style"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:id="@+id/edtPassNguoiDung2"
        android:layout_marginTop="20dp"/>
    <EditText
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="15"
        android:textColor="#000"
        android:background="@drawable/edittext_style"
        android:hint="Số điện thoại"
        android:id="@+id/edtPhoneNguoiDung2"
        android:layout_marginTop="20dp"/>
    <EditText
        android:textColor="#000"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="15"
        android:background="@drawable/edittext_style"
        android:hint="Họ và Tên"
        android:id="@+id/edtFullNameNguoiDung2"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_marginRight="5dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnUpdate2"
            android:background="@drawable/background_button"
            android:text="Cập Nhật"/>
        <Button
            android:layout_marginLeft="5dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnHuy2"
            android:background="@drawable/background_button"
            android:text="Hủy"/>
    </LinearLayout>

</LinearLayout>