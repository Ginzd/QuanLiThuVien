<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/wall1"
    tools:context=".UpdateSachActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="Cập Nhật Sách"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/bookmanage1"/>
    <EditText
        android:gravity="center"
        android:id="@+id/edtMaSach1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:hint="Mã sách"
        android:ems="15"/>
    <Spinner
        android:background="@drawable/style_spinner"
        android:id="@+id/spinerTheLoai1"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/edtTenSach1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:ems="15"
        android:hint="Tên sách"/>
    <EditText
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/edtTacGia1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:ems="15"
        android:hint="Tác giả"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/edtNhaXuatBan1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:ems="15"
        android:gravity="center"
        android:hint="Nhà xuất bản"/>
    <EditText
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/edtGiaBia1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:ems="15"
        android:hint="Giá bìa"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/edtSoLuong1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/edittext_style"
        android:ems="15"
        android:hint="Số lượng"/>
    <LinearLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="UpdateBook"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_button"
            android:text="Cập nhật"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="huyUpdateBook"
            android:background="@drawable/background_button"
            android:layout_marginLeft="5dp"
            android:text="Hủy"/>

    </LinearLayout>

</LinearLayout>