<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">
    <ImageView
        android:id="@+id/ivIconBook"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/bookicon3"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@+id/ivIconBook"
        android:layout_toLeftOf="@+id/layout1"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTenSachBanChay"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:text="Name"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvTacGiaSachBanChay"
            android:text="Tac gia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" />
    </LinearLayout>


</RelativeLayout>