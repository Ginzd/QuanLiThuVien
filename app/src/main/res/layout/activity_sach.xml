<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/wall1"
    tools:context=".SachActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm Sách"
        android:textStyle="bold"
        android:textSize="24dp"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/bookmanage1"/>

    <EditText
        android:gravity="center"
        android:id="@+id/edtMaSach"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:hint="Mã Sách"
        android:ems="15"/>
    <Spinner
        android:background="@drawable/style_spinner"
        android:id="@+id/spinerTheLoai"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/edtTenSach"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:ems="15"
        android:hint="Tên sách"/>
    <EditText
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/edtTacGia"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:ems="15"
        android:hint="Tác giả"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/edtNhaXuatBan"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:ems="15"
        android:gravity="center"
        android:hint="Nhà xuất bản"/>
    <EditText
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/edtGiaBia"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:ems="15"
        android:hint="Giá bìa"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/edtSoLuong"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/edittext_style"
        android:ems="15"
        android:hint="Số Lượng"/>
    <LinearLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button"
            android:onClick="AddBook"
            android:text="Thêm"/>
        <Button
            android:layout_marginLeft="10dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button"
            android:onClick="ShowBook"
            android:text="Hủy"/>

    </LinearLayout>


</LinearLayout>